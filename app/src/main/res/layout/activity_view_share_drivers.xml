            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="95dp"
            android:fontFamily="sans-serif"
            android:text="2. Name:"
            android:textColor="@color/black"
            android:textSize="8sp"
